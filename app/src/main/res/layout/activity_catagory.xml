<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    android:background="@drawable/giphy"
    tools:context="com.example.win8.landscapeapp.Catagory">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CATAGORIES"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_nature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#ADD8E6"
            android:lineSpacingExtra="8sp"
            android:linksClickable="false"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:text="nature"
            android:textAlignment="center"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="visible"  />

        <Button
            android:id="@+id/button_mountain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#ADD8E6"
            android:lineSpacingExtra="8sp"
            android:linksClickable="false"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:text="mountain"
            android:textAlignment="center"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="visible">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_flower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#ADD8E6"
            android:lineSpacingExtra="8sp"
            android:linksClickable="false"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:text="flower"
            android:textAlignment="center"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="visible">

        </Button>

        <Button
            android:id="@+id/button_sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#ADD8E6"
            android:lineSpacingExtra="8sp"
            android:linksClickable="false"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:text="sunset"
            android:textAlignment="center"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="visible" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#ADD8E6"
            android:lineSpacingExtra="8sp"
            android:linksClickable="false"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:text="building"
            android:textAlignment="center"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_sky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#ADD8E6"
            android:lineSpacingExtra="8sp"
            android:linksClickable="false"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:text="sky"
            android:textAlignment="center"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>
